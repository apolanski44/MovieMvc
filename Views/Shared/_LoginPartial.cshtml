@if (Context.User.Identity.Name != null)
{
    <div class="user-menu">
        <span class="welcome-message">Hello, @Context.User.Identity.Name!</span>
        <form asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm" class="logout-form">
            <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
        </form>
    </div>
}
else
{
    <div class="user-menu">
        <a class="btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="Registration">Register</a>
        <a class="btn btn-outline-success btn-sm" asp-controller="Account" asp-action="Login">Login</a>
    </div>
}
