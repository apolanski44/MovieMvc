@model MvcFilm.Models.Movie

<h1>Add New Movie</h1>

<form asp-action="Create" method="post">
    <div>
        <label for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" required />
    </div>
    <div>
        <label for="Genre">Genre</label>
        <input type="text" asp-for="Genre" class="form-control" required />
    </div>
    <div>
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>
    <div>
        <label for="ReleaseYear">Release Year</label>
        <input type="number" asp-for="ReleaseYear" class="form-control" required />
    </div>
    <div>
        <label for="ImagePath">Image Path</label>
        <input type="text" asp-for="ImagePath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Movie</button>
</form>
